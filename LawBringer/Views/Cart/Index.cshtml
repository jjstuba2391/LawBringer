@model LawBringer.Models.Cart
@{
    ViewBag.Title = "Cart";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Price</th>
                <th>City</th>
            </tr>
        </thead>
        <tbody>
            @for (var i = 0; i < Model.Lawyers.Length; i++)
            {
                <tr>
                    <td>
                        @Model.Lawyers[i].Name
                        @Html.HiddenFor(m => m.Lawyers[i].Name)
                    </td>
                    <td>
                        @Model.Lawyers[i].City
                        @Html.HiddenFor(m => m.Lawyers[i].City)
                    </td>
                    <td>
                        @Model.Lawyers[i].Price.ToString("C")
                        @Html.HiddenFor(m => m.Lawyers[i].Price)
                    </td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <th colspan="3">Tax</th>
                <th>@Model.Tax.ToString("C")</th>
            </tr>
            <tr>
                <th colspan="3">Service Charge</th>
                <th>@Model.ServiceCharge.ToString("C")</th>
            </tr>
            <tr>
                <th colspan="3">Total</th>
                <th>@Model.Total.ToString("C")</th>
            </tr>
        </tfoot>
    </table>
@Html.ActionLink("Check Out", "Index", "Checkout", null, new { @class = "btn btn-primary" })
}


